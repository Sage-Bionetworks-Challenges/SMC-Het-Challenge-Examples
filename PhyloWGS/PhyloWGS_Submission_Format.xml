<tool id="PhyloWGS_Submission_Format" name="PhyloWGS Submission Format" version="0.1.0">
  <stdio>
    <exit_code range="1:" />
  </stdio>
  <requirements>
    <container type="docker">phylowgs:smchet1</container>
  </requirements>
  <command><![CDATA[
python /opt/smc-het-challenge/write_report.py
${tree_summary} ${mutations} ${mutation_assignments}
${GALAXY_DATA_INDEX_DIR}
]]></command>
    <inputs>
		<param name="tree_summary" type="text" label="Trees.json.gz"/>
		<param name="mutations" type="text" label="mutations.json.gz"/>
		<param name="mutation_assignments" type="text" label="mutation_assignments.json.gz"/>
    </inputs>
    <outputs>
    	<data name="1A" type="text" label="1A.txt" from_work_dir="1A.txt"/>
    </outputs>
    <help><![CDATA[
      TODO: Fill in help.
      ]]></help>
    </tool>
    